syntax on
set nocompatible
set ignorecase
set smartcase
set incsearch
set wrap
set linebreak
set nolist
set wrapmargin=0
set modeline
set wildmenu
set encoding=utf-8
set number
set ffs=unix,mac,dos

set ruler
set laststatus=2
" set cursorline
set noshowmode

"----- Indentation settings ----- 

filetype plugin on
filetype indent on

set tabstop=4
set shiftwidth=4
set expandtab
set softtabstop=4

set autoindent
set smartindent

" Allow code folding
set foldmethod=indent
set foldlevel=99

" Add visual column
set colorcolumn=80
highlight ColorColumn ctermbg=gray

" Ignore whitespaces when diffing
if &diff
    set diffopt-=internal
    set diffopt+=iwhite
endif

" Don't replace tabs with spaces in Makefiles
autocmd FileType make set noexpandtab

" Set R code indentation to 2 spaces
autocmd FileType r setlocal sw=2 ts=2 sts=2 expandtab
let r_indent_align_args = 0
let r_syntax_folding = 1

" Set Yaml indentation
autocmd FileType yaml setlocal ts=2 sts=2 sw=2 expandtab

" Set up Netrw
let g:netrw_liststyle = 3
let g:netrw_banner = 0
"let g:netrw_browse_split = 2
"let g:netrw_winsize = 25

" Activate markdown folding
let g:markdown_folding = 1

" Search down into subfolders - tab complete file-related tasks
set path+=**

" Make Python code look pretty
let g:python_highlight_all = 1

"Jedi-vim options
" let g:jedi#popup_on_dot = 0

" lintr options
let g:syntastic_enable_r_lintr_checker = 1
let g:syntastic_r_checkers = ['lintr']

" vim-table-mode options
" let g:table_mode_separator = '|'

call plug#begin('~/.vim/plugged')
Plug 'Vimjas/vim-python-pep8-indent'
Plug 'davidhalter/jedi-vim'
" syntastic requires autopep8 or pylint
Plug 'vim-syntastic/syntastic'
Plug 'nvie/vim-flake8'
" To use vim-markdown you must install tabular
" tabular must come before vim-markdown
Plug 'godlygeek/tabular'
Plug 'plasticboy/vim-markdown'
" Plugin to make nicer markdown tables
Plug 'dhruvasagar/vim-table-mode'
Plug 'jalvesaq/Nvim-R'
Plug 'eigenfoo/stan-vim'
call plug#end()
