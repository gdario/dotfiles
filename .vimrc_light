set nocompatible
set encoding=utf-8
syntax on
set incsearch
set ignorecase
set smartcase
set nowrap
set ruler
set wildmenu
set autoread
set foldmethod=indent
set foldlevel=99
"set list
"set listchars=tab:>-

" Make search case sensitive only when needed
set ignorecase
set smartcase

" Enhance completion in the mode line
set wildmenu

" Enable loading the indent file for specific file types.
" It automatically activates filetype plugin
filetype indent on

augroup python
    autocmd!
    autocmd FileType python setlocal expandtab shiftwidth=4 softtabstop=4 tabstop=8
augroup END

augroup textdocs
    autocmd!
    autocmd BufReadPost *.md,*.rmd,*.txt setlocal wrap
augroup END

let r_indent_align_args = 0 
augroup proglangs
    autocmd!
    autocmd FileType r,yaml,lua,sql,json setlocal expandtab sw=2 sts=2 ts=8
augroup END
