set nocompatible
set encoding=utf-8
syntax on
set shiftwidth=4
set softtabstop=0
set incsearch
set ignorecase
set smartcase
set nowrap
set ruler
set wildmenu
set autoread
set foldmethod=indent
set foldlevel=99

" Make search case sensitive only when needed
set ignorecase
set smartcase

" Enhance completion in the mode line
set wildmenu

" Enable loading the indent file for specific file types.
" It automatically activates filetype plugin
filetype indent on

augroup textdocs
    autocmd!
    autocmd BufReadPost *.md,*.rmd,*.txt setlocal wrap
augroup END

let r_indent_align_args = 0 
augroup proglangs
    autocmd!
    autocmd BufReadPost *.r,*.lua setlocal sw=2
augroup END
